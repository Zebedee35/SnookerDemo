{
  "name": "SnookerApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "ios12": "react-native run-ios --simulator 'iPhone 12 mini'",
    "ios8": "react-native run-ios --simulator 'iPhone 8'",
    "ipad": "react-native run-ios --simulator 'iPad (8th generation)'",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "pod": "cd ios; pod install; cd ..",
    "svgr": "svgr ./src/assets/svg -d ./src/components/icons --native --typescript --replace-attr-values '#000=currentColor' --svg-props 'className=' ",
    "storybook": "start-storybook -p 7007",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.13.2",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/bottom-tabs": "^5.11.2",
    "@react-navigation/native": "^5.8.10",
    "axios": "^0.21.0",
    "moment": "^2.29.1",
    "react": "17.0.1",
    "react-native": "0.64.0",
    "react-native-config": "^1.4.1",
    "react-native-gesture-handler": "^1.9.0",
    "react-native-in-app-review": "^2.1.5",
    "react-native-modal": "^11.6.1",
    "react-native-onesignal": "^4.0.6",
    "react-native-reanimated": "^1.13.2",
    "react-native-safe-area-context": "^3.1.9",
    "react-native-screens": "^2.15.0",
    "react-native-svg": "^12.1.0"
  },
  "format": "prettier --write 'src/**/*.{ts,tsx}' && yarn lint:eslint --fix",
  "format:check": "prettier -c 'src/**/*.{ts,tsx}'",
  "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
  "lint:ts": "tsc && yarn lint:eslint",
  "lint": "yarn lint:ts",
  "test": "jest",
  "test:watch": "yarn test --watch",
  "coverage": "yarn run test --coverage",
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^1.1.0",
    "@storybook/addon-actions": "^6.1",
    "@storybook/addon-knobs": "^6.1",
    "@storybook/addon-links": "^6.1",
    "@storybook/addon-ondevice-actions": "^5.3.23",
    "@storybook/addon-ondevice-knobs": "^5.3.23",
    "@storybook/addons": "^6.1.11",
    "@storybook/react-native": "^5.3.23",
    "@storybook/react-native-server": "^5.3.23",
    "@svgr/cli": "^5.5.0",
    "@types/jest": "^25.2.3",
    "@types/react-native": "^0.63.37",
    "@types/react-test-renderer": "^16.9.4",
    "@types/storybook__react-native": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-native": "^3.10.0",
    "jest": "^25.1.0",
    "metro-react-native-babel-preset": "^0.59.0",
    "prettier": "^2.2.1",
    "react-dom": "16.13.1",
    "react-native-storybook-loader": "^2.0.2",
    "react-native-testing-library": "^6.0.0",
    "react-test-renderer": "16.13.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "storybook": "watch rnstl ./src --wait=100 | storybook start | yarn start --projectRoot storybook --watchFolders $PWD",
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./src"
      ],
      "pattern": "**/*.stories.tsx",
      "outputFile": "./storybook/storyLoader.js"
    }
  }
}
